---
const { author, source, sourceName } = Astro.props;
---

<div class="text-center">
  <div class="flex justify-center">
    <blockquote
      class="border-l-4 border-gray-300 italic text-lg pl-6 text-gray-300 bg-gray-900 py-4 px-6 max-w-4xl mt-3 mb-3 rounded-lg"
    >
      <slot />
      <footer class="mt-2 text-gray-400">
        &mdash; {author}
        {
          source && sourceName && (
            <a
              href={source}
              class="text-sm text-gray-500 hover:text-gray-400 ml-2"
              target="_blank"
              rel="noopener noreferrer"
            >
              ~{sourceName}
            </a>
          )
        }
      </footer>
    </blockquote>
  </div>
</div>
